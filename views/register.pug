  link(rel='StyleSheet' href='css/styles.css' type='text/css')
  script(src='script.js')
header
  nav
    ul
      li
        a(href='/') Home
      li |
      li
        a(href='#') Blog
      li.register-link                                                                                  
        a(href='/register')   Register  
main
  section#intro-text
    span Simple Kitchen
    h3
      | Simple &amp; Comforting 
      br
      |             Recipes All Year Round
    //- p Pan-seared chicken, Grill shrimp, mac &amp; cheese&mdash;need we say more?
